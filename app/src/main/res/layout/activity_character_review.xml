        android:layout_marginLeft="24dp"
        android:fontFamily="@font/seagram"
        android:text="INT:"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewUserStr"
        app:layout_constraintStart_toEndOf="@+id/textViewUserStr" />

    <TextView
        android:id="@+id/textViewSTR"
        android:layout_width="wrap_content"
