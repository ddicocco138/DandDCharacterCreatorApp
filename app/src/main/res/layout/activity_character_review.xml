        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/seagram"
        android:text="STR:"
        android:textColor="#000000"
        android:textSize="24sp"
