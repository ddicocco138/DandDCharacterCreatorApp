<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    tools:context=".BackgroundCharCreation">

    <RadioGroup
        android:id="@+id/raceRadioGroup"
        android:layout_width="156dp"
        android:layout_height="448dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitles">

        <RadioButton
            android:id="@+id/clubRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:buttonTint="@color/black"
            android:text="Club"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/daggerRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"

            android:text="Dagger"

            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/greatclubRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:text="Great Club"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/handaxeRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"

            android:text="Hand Axe"

            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/javelinRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:text="Javelin"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/lighthammerRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:text="Light Hammer"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/maceRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:text="Mace"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/quaterstaffRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:text="Quarterstaff"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/sickleRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:text="Sickle"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/spearRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:text="Spear"
            android:textColor="@android:color/black" />

    </RadioGroup>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="161dp"
        android:layout_marginRight="161dp"
        android:layout_marginBottom="62dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raceRadioGroup" />

    <TextView
        android:id="@+id/textViewTitles"
        android:layout_width="216dp"
        android:layout_height="110dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/seagram"
        android:text="Choose your Weapon"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>